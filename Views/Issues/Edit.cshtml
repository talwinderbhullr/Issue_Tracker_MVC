@model Issue_Tracker_MVC.Models.Issue

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Issue</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="AssigneeId" class="control-label"></label>
                <select asp-for="AssigneeId" class="form-control" asp-items="ViewBag.AssigneeId"></select>
                <span asp-validation-for="AssigneeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IssueReporterId" class="control-label"></label>
                <select asp-for="IssueReporterId" class="form-control" asp-items="ViewBag.IssueReporterId"></select>
                <span asp-validation-for="IssueReporterId" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="Content" class="control-label"></label>
                <input asp-for="Content" class="form-control" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>

            <div>
                
                <input type="hidden" asp-for="ReportedDate" class="form-control" />
                <span asp-validation-for="ReportedDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
